@page
@using razor.Models
@model razor.Pages.loginModel
@{
    ViewData["Title"] = "Login";
}

<h1>log in</h1>
<form method="post" class="card p-3">
    <div class="row">
        <div asp-validation-summary="All"></div>
    </div>
    <div class="form-group mb-0 align-middle">
        <label asp-for="loginUser.Username">Username</label>
        <input type="text" asp-for="loginUser.Username" class="mr-5">
        <label asp-for="loginUser.Password">Password</label>
        <input type="password" asp-for="loginUser.Password" class="mr-5">
        <button class="btn btn-primary">log in</button>
    </div>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}